---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import ChangeColor from "./ChangeColor.astro";
---

<header class="grid grid-cols-2 grid-rows-2 grid-flow-col">
  <h2>
    {SITE_TITLE}
  </h2>
  <nav class="flex">
    <HeaderLink href="/">Home</HeaderLink>
    <HeaderLink href="/blog">Blog</HeaderLink>
    <HeaderLink href="/tags">Tags</HeaderLink>
    <HeaderLink href="https://github.com/ondrastech82" target="_blank">
      GitHub
    </HeaderLink>
  </nav>
  <ChangeColor class="row-span-2" />
</header>
<style>
  header {
    margin: 0em 0 2em;
  }
  h2 {
    margin: 0.5em 0;
  }
</style>
