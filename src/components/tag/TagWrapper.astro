---
import { pairTagsWithColor, toSlug } from '../../utils/manipulateTags';
import Tag from './Tag.astro';

export interface Props {tags: Array<string>}
const {tags} = Astro.props;
// const tags = "abcdefghijklmnopqrstuvwxyz".split("");
const tagsWithColor = pairTagsWithColor(tags);
---

<nav class="flex flex-wrap gap-2 py-2">
    {tagsWithColor.map(data => <Tag color={data.color} href={data.tag}>{data.tag}</Tag>)}
</nav>